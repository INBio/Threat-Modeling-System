<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">

    <!-- The index controller -->
    <bean name="aboutController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
		  p:viewName="common/about" />

    <!-- The index controller -->
    <bean name="indexController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="index" />

    <bean id="layerController"
		  class="org.inbio.modeling.web.controller.LayerController">
		<property name="commandName" value="layersForm" />
        <property name="commandClass" value="org.inbio.modeling.web.form.GenericForm" />
        <property name="layerManager" ref="layerManager" />
	</bean>
	<bean name="columnController" class="org.inbio.modeling.web.controller.ColumnController">
		<property name="commandName" value="columnsForm" />
        <property name="commandClass" value="org.inbio.modeling.web.form.GenericForm" />
        <property name="grassManagerImpl" ref="grassManager" />
	</bean>

	<bean name="intervalsController" class="org.inbio.modeling.web.controller.IntervalsController" >
		<property name="commandName" value="intervalsForm" />
        <property name="commandClass" value="org.inbio.modeling.web.form.GenericForm" />
        <property name="grassManagerImpl" ref="grassManager" />
	</bean>

	<bean name="showMapController" class="org.inbio.modeling.web.controller.ShowMapController" >
        <property name="grassManagerImpl" ref="grassManager" />
        <property name="fileManagerImpl" ref="fileManager" />
		<property name="commandName" value="intervalsForm" />
        <property name="commandClass" value="org.inbio.modeling.web.form.GenericForm" />
	</bean>

	<bean name="administrationController" class="org.inbio.modeling.web.controller.AdministrationController" >
		<property name="commandName" value="intervalsForm" />
        <property name="commandClass" value="org.inbio.modeling.web.form.GenericForm" />
	</bean>

    <bean name="loginController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="login" />
</beans>
